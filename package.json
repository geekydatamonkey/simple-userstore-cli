{
  "name": "simple-userstore-cli",
  "version": "0.1.0",
  "description": "CLI for UserStore. Create, update, and delete users.",
  "bin": {
    "simple-userstore-cli": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src -d dist",
    "commit": "git-cz",
    "start": "babel-node ./src/cli.js",
    "test": "eslint src/**/*.js test/**/*.js && ava ",
    "test:watch": "ava --watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "James Johnson <johnsojr@gmail.com> (http://james.mn/)",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "chalk": "^1.1.3",
    "cli-table": "^0.3.1",
    "inquirer": "^1.1.2",
    "simple-userstore": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "^6.11.6",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.3.0",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-plugin-import": "^1.13.0",
    "nodemon": "^1.10.0",
    "semantic-release": "^4.3.5"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true
    },
    "extends": "airbnb-base",
    "rules": {
      "arrow-body-style": [
        "error",
        "always"
      ],
      "no-console": "off",
      "no-underscore-dangle": "off",
      "generator-star-spacing": "off"
    }
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
